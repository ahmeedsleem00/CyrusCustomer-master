@model IEnumerable<CyrusCustomer.Domain.Models.Customer>
@{
    ViewData["Title"] = "Customer List";
}

<h2>@ViewData["Title"]</h2>


<p>
    <a asp-action="Create" style="text-decoration : none;" class="btn btn-dark">Create New</a>
    <a asp-action="Upload" class="btn btn-primary" style="margin-left: 10px;">Upload Excel</a>

    @using (Html.BeginForm("DeleteAll", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete all customer data?');">
            Delete All Customer Data
        </button>
    }
</p>

<!-- Search Form -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Customer Name, Tax ID , Year , Month">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>تاريخ الفاتورة (السنوي)</th>
            <th>تارخ الفاتور (الشهر)</th>
            <th>سجل ضريبي</th>
            <th> عدد الفروع</th>
            <th> اسم العميل</th>
       @*      <th>رقم تليفون المتعاقد</th>
            <th>المتعاقد</th>
            <th> رقم التليفون</th> *@
      
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Year</td>
                <td>@item.Month</td>
                <td>@item.CountOfBranches</td>
                <td>@item.Name</td>
                <td>@item.TaxId</td>
              @*   <td>@item.ResponsiblePerson</td>
                <td>@item.Phone</td>
                <td>@item.UserUpdated</td>  *@ 
          
            
                <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" >Delete</a>
                    <a  asp-action="ViewBranches" asp-route-customerId="@item.Id" class="btn btn-dark m-auto">
                        View Branches
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
