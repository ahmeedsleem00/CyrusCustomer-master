@model CyrusCustomer.Models.CustomerViewModel

@{
    ViewData["Title"] = "Create Customer";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <h4>Customer Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">إسم الشركه</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TaxId" class="form-label">رقم السجل الضريبي</label>
                    <input asp-for="TaxId" class="form-control" />
                    <span asp-validation-for="TaxId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label">رقم الهاتف</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResponsiblePerson" class="form-label">الشخص المسؤول</label>
                    <input asp-for="ResponsiblePerson" class="form-control" />
                    <span asp-validation-for="ResponsiblePerson" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Year" class="form-label">تاريخ الفاتورة السنوي</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Month" class="form-label">تاريخ الفاتورة الشهري</label>
                    <input asp-for="Month" class="form-control" />
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CountOfBranches" class="form-label">عدد الفروع</label>
                    <input asp-for="CountOfBranches" class="form-control" />
                    <span asp-validation-for="CountOfBranches" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Contractor" class="form-label">المتعاقد</label>
                    <input asp-for="Contractor" class="form-control" />
                    <span asp-validation-for="Contractor" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContractorPhoneNumber" class="form-label">ت المتعاقد</label>
                    <input asp-for="ContractorPhoneNumber" class="form-control" />
                    <span asp-validation-for="ContractorPhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InternalAccountant" class="form-label">محاسب داخلى</label>
                    <input asp-for="InternalAccountant" class="form-control" />
                    <span asp-validation-for="InternalAccountant" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InternalAccountantPhone" class="form-label">ت محاسب داخلى</label>
                    <input asp-for="InternalAccountantPhone" class="form-control" />
                    <span asp-validation-for="InternalAccountantPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CharteredAccountant" class="form-label">المحاسب القانوني</label>
                    <input asp-for="CharteredAccountant" class="form-control" />
                    <span asp-validation-for="CharteredAccountant" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CharteredAccountantPhone" class="form-label">ت محاسب قانوني</label>
                    <input asp-for="CharteredAccountantPhone" class="form-control" />
                    <span asp-validation-for="CharteredAccountantPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount1" class="form-label">المبلغ 1</label>
                    <input asp-for="Amount1" class="form-control" />
                    <span asp-validation-for="Amount1" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount2" class="form-label">المبلغ 2</label>
                    <input asp-for="Amount2" class="form-control" />
                    <span asp-validation-for="Amount2" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount3" class="form-label">المبلغ 3</label>
                    <input asp-for="Amount3" class="form-control" />
                    <span asp-validation-for="Amount3" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Custom CSS Styles -->
<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    .custom-card {
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 60%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .custom-label {
        display: block;
        font-weight: bold;
        font-size: 1.1em;
        margin-bottom: 8px;
        color: #333;
    }

    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1em;
        background-color: #fff;
        transition: all 0.3s ease;
    }

    .custom-input:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
    }

    .custom-button {
        display: inline-block;
        padding: 12px 20px;
        background-color: #007bff;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 1em;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    .custom-button:hover {
        background-color: #0056b3;
    }

    .custom-error {
        color: red;
        font-size: 0.9em;
    }

    /* Add responsive behavior */
    media (max-width: 768px) {
        .custom-card {
            width: 90%;
        }
    }
</style>